<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="playlist"
            type="com.tvplayer.app.data.model.Playlist" />
        <variable
            name="listener"
            type="com.tvplayer.app.ui.main.PlaylistClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="?android:attr/selectableItemBackground"
        android:onClick="@{() -> listener.onPlaylistClick(playlist)}"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/playlistIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp"
            android:scaleType="fitCenter"
            android:src="@{playlist.isLocal() ? @android:drawable/ic_menu_archive : @android:drawable/ic_menu_share}"
            tools:src="@android:drawable/ic_menu_share" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/playlistName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{playlist.name}"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="播放列表" />

            <TextView
                android:id="@+id/playlistDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{playlist.description != null ? playlist.description : (playlist.isLocal() ? @string/local_playlist : @string/remote_playlist)}"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="http://example.com/list.m3u" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/channelCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{@string/channel_count_format(playlist.channelCount)}"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="11sp"
                    tools:text="128 个频道" />

                <TextView
                    android:id="@+id/lastUpdated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@{playlist.getRefreshTimeString()}"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="11sp"
                    tools:text="2小时前" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/statusIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@{playlist.isActive ? @android:drawable/ic_menu_upload : @android:drawable/ic_menu_close_clear_cancel}"
                tools:src="@android:drawable/ic_menu_upload" />

            <TextView
                android:id="@+id/statusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{playlist.isDefault ? @string/default_playlist : (playlist.isActive ? @string/enabled : @string/disabled)}"
                android:textColor="@{playlist.isActive ? @android:color/holo_green_light : @android:color/holo_red_light}"
                android:textSize="10sp"
                android:textStyle="bold"
                tools:text="启用" />

        </LinearLayout>

    </LinearLayout>
</layout>